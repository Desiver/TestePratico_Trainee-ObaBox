@model TestePratico_Trainee_ObaBox.Models.Endereco
@{
    ViewBag.Title = "Endereço";
}

<div class="container">
    <div class="row">
        <h2 class="text-center">Cadastre seu Endereço</h2>
        @using (Html.BeginForm())
        {
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    @Html.LabelFor(model => model.Cliente_id, "Clientes")
                    @Html.DropDownListFor(model => model.Cliente_id, null, String.Empty, new { @class = "form-control", required = "required" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.Cep, "CEP")
                    @Html.EditorFor(model => model.Cep, new { htmlAttributes = new { @class = "form-control", required = "required" } })
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.Logradouro, "Logradouro")
                    @Html.EditorFor(model => model.Logradouro, new { htmlAttributes = new { @class = "form-control", required = "required" } })
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.Numero, "Número")
                    @Html.EditorFor(model => model.Numero, new { htmlAttributes = new { @class = "form-control", required = "required" } })
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.Complemento, "Complemento")
                    @Html.EditorFor(model => model.Complemento, new { htmlAttributes = new { @class = "form-control" } })
                </div>
                <div class="form-group conjuntoCidade">
                    <div>
                        @Html.LabelFor(model => model.Cidade, "Cidade")
                        @Html.EditorFor(model => model.Cidade, new { htmlAttributes = new { @class = "form-control", required = "required" } })
                    </div>
                    <div>
                        @Html.LabelFor(model => model.Uf, "UF")
                        @Html.EditorFor(model => model.Uf, new { htmlAttributes = new { @class = "form-control", required = "required" } })
                    </div>
                </div>

                <div class="form-group">
                    <button type="submit" class="btn btn-success">Cadastrar</button>
                </div>
                @{
                    if (ViewBag.mensagem != null)
                    {
                        <div class="form-group">
                            <span class="alert alert-success">@ViewBag.Mensagem</span>
                        </div>
                    }
                }
            </div>
        </div>
        }
    </div>
</div>