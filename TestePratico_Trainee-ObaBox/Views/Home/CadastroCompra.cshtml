@model TestePratico_Trainee_ObaBox.ViewModel.Compra
@{
    ViewBag.Title = "Compra";
}

<div class="container">
    <div class="row">
        <h2 class="text-center">Cadastre sua Compra</h2>
        @using (Html.BeginForm())
        {
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    @Html.LabelFor(model => model.Loja.Id, "Loja")
                    @Html.DropDownList("lojasCadastradas", null, String.Empty, new { @class = "form-control", required = "required" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.Cliente.Id, "Cliente")
                    @Html.DropDownList("clientesCadastrados", null, String.Empty, new { @class = "form-control", required = "required" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.Endereco.Id, "Endereço")
                    @Html.DropDownList("enderecosCadastrados", new SelectList(new List<string>()), "- Selecione o Cliente", new { @class = "form-control", required = "required" })
                </div>
                
                <div class="form-group">
                    <button type="submit" class="btn btn-success">Cadastrar</button>
                </div>
                @{
                    if (ViewBag.mensagem != null)
                    {
                        <div class="form-group">
                            <span class="alert alert-@ViewBag.actionColor">@ViewBag.Mensagem</span>
                        </div>
                    }
                }
            </div>
        </div>
        }
    </div>
</div>